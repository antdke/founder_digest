<%= render partial: 'shared/page_heading', locals: {heading: 'Write an update', subheading: 'Share the latest new from your company.'} %>


<div class="max-w-3xl mx-auto">
  <textarea rows="15" maxlength="150"
    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
    placeholder="Here's our update..."></textarea>
  <div class="pt-5">
    <div class="flex justify-center">
  
      <button type="submit"
        class="w-32 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Share</button>
    </div>
  </div>
</div>
