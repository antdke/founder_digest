<!-- Details / Instructions -->
<%= render partial: 'shared/page_heading', locals: {heading: 'Apply to Founder Digest!', subheading: 'Each submission is manually reviewed by our team within 24 hours.'} %>

Params: <%= params %>

<div class="max-w-sm mx-auto">

  <%= form_for UserSubmission.new do |form|%>

      <div class="space-y-8 divide-y divide-gray-200">

        <!-- Plan (hidden) -->
        <input type="hidden" name="plan" value="<%= params[:plan]%>">

        <div class="pt-8">
          <!-- First name -->
          <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
    
            <div class="sm:col-span-3">
              <label for="first_name" class="block text-sm font-medium text-gray-700">First name</label>
              <div class="mt-1">
                  <%= form.text_field :first_name, placeholder: 'Elon', autocomplete: 'given-name', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'%>
              </div>
            </div>
    
            <!-- Last name -->
            <div class="sm:col-span-3">
              <label for="last_name" class="block text-sm font-medium text-gray-700">Last name</label>
              <div class="mt-1">
                <%= form.text_field :last_name, placeholder: 'Musk', autocomplete: 'family-name', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'%>
              </div>
            </div>
    
            <!-- Email -->
            <div class="sm:col-span-6">
              <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
              <div class="mt-1">
                  <%= form.email_field :email, type: 'email', placeholder: 'elon@spacex.com', autocomplete: 'email', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
            </div>
    
            <!-- Website -->
            <div class="sm:col-span-6">
              <label for="website" class="block text-sm font-medium text-gray-700">Company Website</label>
              <div class="mt-1">
                <%= form.url_field :website, type: 'url', placeholder: 'https://spacex.com', autocomplete: 'url', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'%>
              </div>
            </div>
    
            <!-- Job Role (Radio buttons) -->
            <div class="sm:col-span-4">
              <fieldset class="mt-6">
                <legend class="contents text-sm font-medium text-gray-900">Job Role</legend>
                <div class="mt-3 space-y-4">
                  <div class="flex items-center">
                    <%= form.radio_button :job_role, "founder", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                    <%= form.label :job_role_founder, "Founder", class: "ml-3 block text-sm font-medium text-gray-700" %>
                  </div>
                  <div class="flex items-center">
                    <%= form.radio_button :job_role, "c_suite", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                    <%= form.label :job_role_c_suite, "C-Suite", class: "ml-3 block text-sm font-medium text-gray-700" %>
                  </div>
                  <div class="flex items-center">
                     <%= form.radio_button :job_role, "marketing", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                    <%= form.label :job_role_marketing, "Marketing", class: "ml-3 block text-sm font-medium text-gray-700" %>
                  </div>
                </div>
              </fieldset>
            </div>
    
            <!-- Stakeholder update sample -->
            <div class="sm:col-span-6">
              <label for="text" class="block text-sm font-medium text-gray-700">About</label>
              <div class="mt-1">
                  <%= form.text_area :text, rows: 6, placeholder: "Here's what we did this month..", class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'%>
              </div>
              <p class="mt-2 text-sm text-gray-500">Write a few sentences about yourself.</p>
            </div>
    
          </div>
        </div>
      </div>
    
      <!-- Apply button -->
      <div class="pt-5">
        <div class="flex justify-end">
    
          <button type="submit"
            class="w-full inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Apply</button>
        </div>
      </div>

  <% end %>
    
  
  
</div>
